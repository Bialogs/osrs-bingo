<!DOCTYPE html>
<html>
  <head>
    <title>OsrsBingo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-dark text-warning">
    <nav class="navbar navbar-expand-lg navbar-dark bg-gray fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">Bingo</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/standings">Current Standings</a>
            </li>
          </ul>
          <ul class="navbar-nav align-items-center">
            <% if Current.user %>
              <li class="nav-item">
                <span class="navbar-text me-3">Hi <%= Current.user.first_name %></span>
                <li class="nav-item">
                  <%= link_to "Log Out", log_out_path, class: "nav-link" %>
                </li>
              </li>
            <% else %>
              <li class="nav-item">
                <%= button_to "Sign In / Sign Up", "/auth/google_oidc", data: { turbo: false }, class: "btn btn-light" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
